          .item-box__price
          .table
            %ul.tabnav-a
              %li
                %a{:href => "#tab01"} アプリ概要
              %li
                %a{:href => "#tab02"} コメント
            .tabcontent-a
              //概要
              #tab01
                %table
                  %tbody
                    %tr
                      %th
                        作成者
                      %td
                        テスト太郎
                    %tr
                      %th
                        アプリ名
                      %td
                        = @post.name
                    %tr
                      %th
                        開発環境
                      %td
                        = @post.dev_environment
                    %tr
                      %th
                        使用言語
                      %td
                        = @post.using_language
                    %tr
                      %th
                        ライブラリ
                        %br
                        フレームワーク
